# ============================================
# Complete Workflow: vSphere â†’ libvirt (Windows 10)
# ============================================
# Description: Export Windows 10 VM from vSphere and prepare for libvirt/KVM with VirtIO drivers
# Use Case: Windows 10 Professional/Enterprise migration
# Prerequisites:
#   - govc installed
#   - vCenter credentials
#   - VirtIO driver ISO (virtio-win.iso)
#   - Windows 10 VM
# ============================================
{
  "cmd": "vsphere",
  "vcenter": "vcenter.example.com",
  "username": "administrator@vsphere.local",
  "password_file": "~/.vcenter_password",
  "datacenter": "Production-DC",
  "cluster": "Windows-Cluster",
  "vm_name": "windows-10-pro-workstation",
  "vs_action": "export",
  "export_method": "govc",
  "export_format": "ova",
  "create_snapshot": true,
  "snapshot_name": "kvm-migration-$(date +%Y%m%d-%H%M%S)",
  "snapshot_description": "Snapshot for KVM migration",
  "snapshot_memory": false,
  "snapshot_quiesce": true,
  "delete_snapshot_after": true,
  "flatten": true,
  "compress": true,
  "disk_format": "qcow2",
  "windows": true,
  "os_type": "windows",
  "os_variant": "win10",
  "inject_virtio": true,
  "virtio_win_iso": "/data/virtio-win.iso",
  "virtio_drivers": [
    "storage",
    "network",
    "balloon",
    "rng",
    "vioserial"
  ],
  "modify_registry": true,
  "registry_edits": [
    "Add VirtIO storage to BOOT_START",
    "Add VirtIO drivers to CriticalDeviceDatabase",
    "Configure safe boot for driver detection"
  ],
  "boot_strategy": "two-phase",
  "phase1_bus": "sata",
  "phase2_bus": "virtio",
  "backup_bcd": true,
  "repair_bcd": true,
  "remove_vmware_tools": true,
  "uninstall_vmware_tools_cleanly": true,
  "to_output": "/data/kvm/windows-10-pro.qcow2",
  "output_format": "qcow2",
  "output_dir": "/data/kvm/",
  "generate_libvirt_xml": true,
  "libvirt_xml_path": "/data/kvm/windows-10-pro.xml",
  "libvirt_domain_name": "windows-10-pro",
  "memory_mb": 8192,
  "vcpus": 4,
  "cpu_mode": "host-passthrough",
  "cpu_topology": {
    "sockets": 1,
    "cores": 2,
    "threads": 2
  },
  "machine_type": "q35",
  "firmware_type": "uefi",
  "uefi_loader": "/usr/share/OVMF/OVMF_CODE.fd",
  "uefi_nvram_template": "/usr/share/OVMF/OVMF_VARS.fd",
  "secure_boot": false,
  "disk_bus_phase1": "sata",
  "disk_cache_phase1": "writeback",
  "disk_bus": "virtio",
  "disk_cache": "writeback",
  "disk_io": "threads",
  "disk_discard": "unmap",
  "network_type": "bridge",
  "network_bridge": "br0",
  "network_model": "virtio",
  "enable_spice": true,
  "spice_listen": "127.0.0.1",
  "graphics_type": "spice",
  "enable_qxl": true,
  "enable_audio": true,
  "audio_model": "ich9",
  "enable_usb_tablet": true,
  "enable_usb_keyboard": true,
  "qemu_guest_agent": true,
  "qemu_guest_agent_path": "C:\\Program Files\\Qemu-ga\\qemu-ga.exe",
  "enable_virtio_serial": true,
  "enable_balloon": true,
  "enable_rng": true,
  "rng_model": "virtio",
  "libvirt_test": true,
  "boot_timeout": 600,
  "validate_windows_boot": true,
  "check_virtio_drivers_loaded": true,
  "report": "/var/log/migrations/windows-10-$(date +%Y%m%d-%H%M%S).md",
  "log_level": "INFO",
  "verbose": true,
  "enable_recovery": true,
  "recovery_checkpoint_dir": "/tmp/hyper2kvm-checkpoints",
  "post_migration_script": "#!/bin/bash\nset -e\n\necho \"=========================================\"\necho \"Windows 10 Migration Post-Processing\"\necho \"=========================================\"\n\n# Import domain (Phase 1: SATA boot)\nvirsh define /data/kvm/windows-10-pro.xml\n\n# Start VM with SATA disk\necho \"Starting Windows 10 VM (Phase 1: SATA boot for driver installation)...\"\nvirsh start windows-10-pro\n\n# Wait for Windows to boot and install VirtIO drivers\necho \"Waiting for Windows to boot and detect VirtIO drivers...\"\necho \"This may take 5-10 minutes...\"\nsleep 300\n\n# Check VM status\nvirsh list | grep windows-10-pro\n\necho \"\"\necho \"Phase 1 Complete: Windows booted with SATA\"\necho \"\"\necho \"Next Steps:\"\necho \"1. Verify Windows booted successfully: virsh console windows-10-pro\"\necho \"2. Check Device Manager for VirtIO drivers\"\necho \"3. Once drivers are installed, shut down VM\"\necho \"4. Modify XML to switch disk from SATA to VirtIO\"\necho \"5. Restart VM (Phase 2: VirtIO production boot)\"\necho \"\"\necho \"Phase 2 XML modification (after shutdown):\"\necho \"  virsh shutdown windows-10-pro\"\necho \"  # Edit XML: Change disk bus from 'sata' to 'virtio'\"\necho \"  virsh edit windows-10-pro\"\necho \"  virsh start windows-10-pro\"\necho \"\"\necho \"Alternative: Access via virt-manager for GUI management\"\necho \"  virt-manager\"\n",
  "post_migration_notes": "Windows 10 Two-Phase Boot Strategy:\n\nPHASE 1 (SATA Bootstrap):\n- VM boots with SATA disk controller\n- Windows detects VirtIO drivers injected offline\n- Drivers install automatically (PnP)\n- VirtIO storage becomes available in Device Manager\n\nPHASE 2 (VirtIO Production):\n- Shutdown VM after driver installation confirmed\n- Modify libvirt XML: bus=\"sata\" \u2192 bus=\"virtio\"\n- Restart VM\n- Windows now boots natively on VirtIO\n\nThis ensures zero-risk migration with guaranteed driver availability.\n"
}